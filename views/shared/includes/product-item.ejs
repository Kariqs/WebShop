<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
        <h1>
            <%= product.title %>
        </h1>
        <p>
            Kshs. <%= product.price %>
        </p>

        <% if (locals.isAdmin) { %>
            <div class="product-item-actions">
                <a class="btn btn-alt" href="/admin/products/<%= product.id %>">View and Edit</a>
                <button class="btn btn-alt" data-productid="<%= product.id %>"
                    data-csrf="<%= locals.csrfToken %>">Delete</button>
            </div>

            <% }else{ %>
                <a href="/products/<%= product.id %>" class="btn btn-alt">View Product</a>
                <%}%>

    </div>
</article>