<%- include('../../shared/includes/head',{title:"DevShop - Signup"}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    </head>
    </body>
    <%- include('../../shared/includes/header') %>
        <main>
            <h1>Create New Account</h1>
            <% if (sessionData.message) { %>
                <section class="alert">
                    <h2>Invalid input</h2>
                    <p>
                        <%= sessionData.message %>
                    </p>
                </section>
                <% } %>
                    <form action="/signup" method="POST">
                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                        <p>
                            <label for="email">E-Mail</label>
                            <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
                        </p>
                        <p>
                            <label for="confirm-email">Confirm Email</label>
                            <input type="email" id="confirm-email" name="confirm-email"  value="<%= sessionData.confirmEmail %>" required>
                        </p>
                        <p>
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password"  value="<%= sessionData.password %>" required minlength="6">
                        </p>
                        <hr>
                        <p>
                            <label for="email">Full Name</label>
                            <input type="text" id="fullname" name="fullname"  value="<%= sessionData.fullname %>" required>
                        </p>
                        <p>
                            <label for="city">City or Town</label>
                            <input type="text" id="city" name="city"  value="<%= sessionData.city %>" required>
                        </p>
                        <p>
                            <label for="city">Phone Number</label>
                            <input type="number" id="phone" name="phone"  value="<%= sessionData.phone %>" required>
                        </p>
                        <p>
                            <button class="btn">Create Account</button>
                        </p>
                        <p id="switch form">Already have an account? <a href="/login">Login</a></p>
                    </form>
        </main>
        <%- include('../../shared/includes/footer') %>

            </html>