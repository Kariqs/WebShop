<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <p>
        <label for="title">Product Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
    </p>

    <div id="image-upload-control">
        <p>
            <label for="image">Product Image</label>
            <input type="file" name="image" id="image" accept=".png,.jpg,.jpeg " <% if (imageRequired) { %>
             required
            <% } %>>
        </p>

        <img  src="" alt="Selected image.">
    </div>
    <p>
        <label for="summary">Product Summary</label>
        <input type="text" name="summary" id="summary" value="<%= product.summary %>" required maxlength="100">
    </p>
    <p>
        <label for="price">Product Price</label>
        <input type="number" name="price" id="price" value="<%= product.price %>" min="1" step="1" required>
    </p>
    <p>
        <label for="description">Product Description</label>
        <textarea name="description" id="description" rows="5" required><%= product.description %></textarea>
    </p>

    <p>
        <button type="reset" class="btn btn-alt">Clear</button>
        <button class="btn">Save</button>
    </p>
</form>